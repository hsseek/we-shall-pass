<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".timer.TimerActivity">
    
    <FrameLayout
        android:id="@+id/frame_timer_alarms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/frame_timer_controls"
        app:layout_constraintLeft_toRightOf="@id/frame_timer_counter"
        app:layout_constraintHorizontal_weight="1"
        />

    <FrameLayout
        android:id="@+id/frame_timer_counter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/frame_timer_alarms"
        app:layout_constraintHorizontal_weight="2"
        />

    <FrameLayout
        android:id="@+id/frame_timer_controls"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_timer_alarms"
        app:layout_constraintLeft_toLeftOf="@id/frame_timer_alarms"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>